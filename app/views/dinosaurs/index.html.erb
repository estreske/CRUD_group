<form action='/dinosaurs/new'>
<button>Add A Dinosaur</button>
</form>

<h1>Dinosaurs Galore</h1>
<table>
  <thead>
    <th> Name </th>
    <th> Species </th>
    <th> Diet </th>
  </thead>
  <tbody>
    <% @dinosaurs.each do |dinosaur| %>
      <tr>
        <td>
          <%= dinosaur.name %>
        </td>
        <td>
          <%= dinosaur.species %>
        </td>
        <td>
          <%= dinosaur.diet %>
        </td>
        <td>
          <form action='/dinosaurs/<%= dinosaur.id %>/edit'>
          <input type="submit" value="edit" name="edit">
        </form>

          <button><%= link_to "Delete", {action: "destroy", id: dinosaur.id}, method: :delete %></button>

        </td>
      </tr>
    <% end %>
  </tbody>

</table>
